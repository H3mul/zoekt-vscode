// Renovate configuration file in JSON5 format
{
    extends: [
        "config:recommended", 
        "helpers:pinGitHubActionDigests"
    ],
    prConcurrentLimit: 0, // No limit on concurrent PRs
    prHourlyLimit: 0,     // No limit on hourly PR creation
    branchConcurrentLimit: 0,
    automerge: true,
    labels: ["renovate"],
    rebaseWhen: "behind-base-branch",
    platform: "github",
    repositories: [ "h3mul/zoekt-vscode" ],
    packageRules: [
    {
      // Automerge minor change PRs
      matchUpdateTypes: ["patch", "minor", "digest"],
      matchManagers: ["github-actions"],
      automerge: true,
    }
  ]
}
