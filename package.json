{
    "name": "zoekt-vscode",
    "displayName": "Zoekt Code Search",
    "description": "An extension for searching code using the Zoekt JSON API.",
    "icon": "media/icons/zoekt-icon.png",
    "version": "0.4.0",
    "publisher": "h3mul",
    "repository": {
        "type": "git",
        "url": "https://github.com/H3mul/zoekt-vscode"
    },
    "engines": {
        "vscode": "^1.106.1"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "zoekt",
        "search",
        "code search",
        "search extension"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "zoekt-sidebar",
                    "title": "Zoekt Search",
                    "icon": "media/icons/zoekt-icon-light.svg"
                }
            ]
        },
        "views": {
            "zoekt-sidebar": [
                {
                    "id": "searchResults",
                    "name": "Results",
                    "type": "tree"
                }
            ]
        },
        "commands": [
            {
                "command": "zoekt.search",
                "title": "Zoekt: Search",
                "icon": "$(search)"
            },
            {
                "command": "zoekt.searchSelection",
                "title": "Zoekt: Search",
                "icon": "$(search)"
            },
            {
                "command": "zoekt.collapseAll",
                "title": "Collapse All",
                "icon": "$(collapse-all)"
            },
            {
                "command": "zoekt.clearHistory",
                "title": "Zoekt: Clear Search History",
                "icon": "$(clear-all)"
            },
            {
                "command": "zoekt.dismissResult",
                "title": "Dismiss Result",
                "icon": "$(close)"
            },
            {
                "command": "zoekt.dismissAllResults",
                "title": "Dismiss All Results",
                "icon": "$(clear-all)"
            },
            {
                "command": "zoekt.copyRemoteLink",
                "title": "Copy Remote Link",
                "icon": "$(link)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "zoekt.search",
                    "when": "view == searchResults",
                    "group": "navigation@0"
                },
                {
                    "command": "zoekt.collapseAll",
                    "when": "view == searchResults",
                    "group": "navigation@1"
                },
                {
                    "command": "zoekt.dismissAllResults",
                    "when": "view == searchResults",
                    "group": "navigation@2"
                }
            ],
            "editor/context": [
                {
                    "command": "zoekt.searchSelection",
                    "group": "zoekt@1"
                },
                {
                    "command": "zoekt.copyRemoteLink",
                    "when": "resourceScheme == zoekt-remote",
                    "group": "zoekt@1"
                }
            ],
            "commandPalette": [
                {
                    "command": "zoekt.search",
                    "when": "false"
                }
            ],
            "view/item/context": [
                {
                    "command": "zoekt.dismissResult",
                    "when": "view == searchResults && (viewItem == fileMatch || viewItem == lineMatch)",
                    "group": "inline"
                },
                {
                    "command": "zoekt.copyRemoteLink",
                    "when": "view == searchResults && (viewItem == fileMatch || viewItem == lineMatch)",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Zoekt",
            "properties": {
                "zoekt.apiUrl": {
                    "type": "string",
                    "default": "http://localhost:6070",
                    "description": "The URL of the Zoekt API server."
                },
                "zoekt.queryHistorySize": {
                    "type": "number",
                    "default": 5,
                    "description": "Maximum number of queries to store in history."
                },
                "zoekt.prepopulateLastQuery": {
                    "type": "boolean",
                    "default": true,
                    "description": "Pre-populate the search input with the last query on new search."
                }
            }
        },
        "keybindings": [
            {
                "command": "zoekt.searchSelection",
                "key": "ctrl+shift+k"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run lint && npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src/**/*.ts"
    },
    "devDependencies": {
        "@types/vscode": "1.107.0",
        "@typescript-eslint/eslint-plugin": "8.49.0",
        "@typescript-eslint/parser": "8.49.0",
        "@vscode/vsce": "3.7.1",
        "eslint": "9.39.1",
        "ts-loader": "9.5.4",
        "typescript": "5.9.3"
    },
    "dependencies": {
        "axios": "^1.12.2"
    }
}
