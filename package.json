{
  "name": "vscode-zoekt-extension",
  "displayName": "Zoekt Code Search",
  "description": "An extension for searching code using the Zoekt JSON API.",
  "version": "0.1.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zoekt-sidebar",
          "title": "Zoekt Search",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "zoekt-sidebar": [
        {
          "id": "searchResults",
          "name": "Results",
          "type": "tree"
        }
      ]
    },
    "commands": [
      {
        "command": "zoekt.search",
        "title": "Zoekt: Search",
        "icon": "$(search)"
      },
      {
        "command": "zoekt.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "zoekt.clearHistory",
        "title": "Zoekt: Clear Search History",
        "icon": "$(clear-all)"
      },
      {
        "command": "zoekt.dismissResult",
        "title": "Dismiss Result",
        "icon": "$(close)"
      },
      {
        "command": "zoekt.dismissAllResults",
        "title": "Dismiss All Results",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "zoekt.search",
          "when": "view == searchResults",
          "group": "navigation@0"
        },
        {
          "command": "zoekt.collapseAll",
          "when": "view == searchResults",
          "group": "navigation@1"
        },
        {
          "command": "zoekt.dismissAllResults",
          "when": "view == searchResults",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "zoekt.clearHistory",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "zoekt.dismissResult",
          "when": "view == searchResults && viewItem != summary",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Zoekt Configuration",
      "properties": {
        "zoekt.apiUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "The URL of the Zoekt API server."
        },
        "zoekt.queryHistorySize": {
          "type": "number",
          "default": 5,
          "description": "The maximum number of search queries to cache in history."
        }
      }
    },
    "keybindings": [
      {
        "command": "zoekt.search",
        "key": "ctrl+alt+k"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "@types/vscode": "^1.80.0"
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
